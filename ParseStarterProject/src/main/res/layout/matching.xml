<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/activity_match"
    android:clickable="true">

    <Button
        android:id="@+id/likeButton"

        android:text="YES!"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/matchbutton"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_above="@+id/static_class_text"
        android:layout_alignRight="@+id/classesText1"
        android:layout_alignEnd="@+id/classesText1"
        android:layout_toRightOf="@+id/nameText"
        android:layout_toEndOf="@+id/nameText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Classes:"
        android:id="@+id/static_class_text"
        android:textColor="#FFF"
        android:textSize="30dp"
        android:layout_alignTop="@+id/classesText1"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/classes_text_one"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:id="@+id/classesText1"
        android:paddingBottom="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="test"
        android:textColor="#FFF"
        android:textSize="30dp"
        android:id="@+id/nameText"
        android:layout_centerHorizontal="true"
        android:paddingTop="30dp" />

    <com.parse.ParseImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/profilepic"
        android:layout_alignRight="@+id/likeButton"
        android:layout_alignEnd="@+id/likeButton"
        android:layout_below="@+id/nameText"
        android:layout_alignLeft="@+id/dislikeButton"
        android:layout_alignStart="@+id/dislikeButton"
        android:layout_above="@+id/likeButton"
        android:layout_marginBottom="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.TabWidget"
        android:text="Stinder"
        android:id="@+id/textView5"
        android:nestedScrollingEnabled="false"
        android:textSize="@dimen/design_fab_size_normal"
        android:textColor="#6599FF"
        android:typeface="sans"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:layout_above="@+id/profilepic"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/dislikeButton"
        android:text="NO"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/rejectbutton"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_above="@+id/static_class_text"
        android:layout_toLeftOf="@+id/nameText"
        android:layout_alignLeft="@+id/static_class_text"
        android:layout_alignStart="@+id/static_class_text" />


</RelativeLayout>


