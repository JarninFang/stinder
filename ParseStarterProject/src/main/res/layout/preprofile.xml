<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:windowSoftInputMode="adjustResize"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.parse.starter.PreProfileActivity"
    tools:showIn="layout/activity_pre_profile">

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/center"
        android:orientation="vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Stinder!"
        android:id="@+id/PersonName"
        android:nestedScrollingEnabled="false"
        android:textColor="#6599FF"
        android:textSize="32sp"
        android:typeface="sans"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/messagebutton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/messenger"
        android:layout_alignTop="@+id/PersonName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/PersonName"
        android:layout_above="@+id/submitbutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <com.parse.ParseImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/profileImage"
        android:baselineAlignBottom="false"
        android:contextClickable="true"
        android:background="@drawable/textborder"
        android:src="@drawable/default_profpic"
        android:layout_below="@+id/PersonName"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click above to upload an image!"
        android:layout_below="@+id/profileImage"
        android:layout_alignLeft="@+id/profileImage"
        android:layout_alignStart="@+id/profileImage"
        android:id="@+id/uploadText"/>
    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Class"
        android:id="@+id/Class1"
        android:editable="true"
        android:elegantTextHeight="false"
        android:layout_gravity="top"
        android:layout_below="@+id/uploadText"
        android:background="@drawable/textborder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/remove_class"
        android:id="@+id/RemoveClass1"
        android:background="@drawable/messagebutton"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/profileImage"
        android:layout_alignTop="@+id/Class1"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignBottom="@id/Class1" />

    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Class"
        android:id="@+id/Class2"
        android:layout_below="@+id/Class1"
        android:background="@drawable/textborder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_alignRight="@+id/center" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/remove_class"
        android:id="@+id/RemoveClass2"
        android:background="@drawable/messagebutton"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/RemoveClass1"
        android:layout_alignTop="@+id/Class2"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignBottom="@id/Class2" />

    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:hint="Class"
        android:inputType="text"
        android:id="@+id/Class3"
        android:layout_below="@+id/Class2"
        android:background="@drawable/textborder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_alignRight="@+id/center" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/remove_class"
        android:id="@+id/RemoveClass3"
        android:background="@drawable/messagebutton"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/RemoveClass2"
        android:layout_alignTop="@+id/Class3"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignBottom="@id/Class3" />

    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:hint="Class"
        android:inputType="text"
        android:id="@+id/Class4"
        android:layout_below="@+id/Class3"
        android:background="@drawable/textborder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_alignRight="@+id/center" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/remove_class"
        android:id="@+id/RemoveClass4"
        android:background="@drawable/messagebutton"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/RemoveClass3"
        android:layout_alignTop="@+id/Class4"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignBottom="@id/Class4" />

    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:hint="Class"
        android:inputType="text"
        android:id="@+id/Class5"
        android:layout_below="@+id/Class4"
        android:background="@drawable/textborder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_alignRight="@+id/center" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/remove_class"
        android:id="@+id/RemoveClass5"
        android:background="@drawable/messagebutton"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/RemoveClass4"
        android:layout_alignTop="@+id/Class5"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignBottom="@id/Class5" />

    <Button
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:text="+ Add class"
        android:id="@+id/AddClass"
        android:background="@drawable/messagebutton"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/Class1" />

    </RelativeLayout>
</ScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find a partner!"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/submitbutton"
        android:background="@drawable/roundedbutton"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>