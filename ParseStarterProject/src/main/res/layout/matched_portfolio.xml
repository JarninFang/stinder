<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    >




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Matched Portfolio"
        android:textSize="30sp"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/activity_horizontal_margin"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingBottom="@dimen/activity_horizontal_margin">
        <com.parse.ParseImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/image1"
            android:src="@drawable/default_profpic"
            android:layout_weight="0.3"
            android:layout_alignRight="@+id/buttonnick" />

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Nick Wong"
            android:id="@+id/name1"
            android:layout_gravity="right"
            android:layout_weight="0.7"
            android:layout_alignLeft="@id/image1"
            android:background="@drawable/messagebutton"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingBottom="@dimen/activity_horizontal_margin">

        <com.parse.ParseImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/image2"
            android:src="@drawable/default_profpic"
            android:layout_weight="0.3"
            android:layout_alignRight="@+id/buttonnick"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Nick Wong"
            android:id="@+id/name2"
            android:layout_gravity="right"
            android:layout_weight="0.7"
            android:layout_alignLeft="@id/image2"
            android:background="@drawable/messagebutton"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingBottom="@dimen/activity_horizontal_margin">

        <com.parse.ParseImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/image3"
            android:src="@drawable/default_profpic"
            android:layout_weight="0.3"
            android:layout_alignRight="@+id/buttonnick"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Nick Wong"
            android:id="@+id/name3"
            android:layout_gravity="right"
            android:layout_weight="0.7"
            android:layout_alignLeft="@id/image3"
            android:background="@drawable/messagebutton"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingBottom="@dimen/activity_horizontal_margin">

        <com.parse.ParseImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/image4"
            android:src="@drawable/default_profpic"
            android:layout_weight="0.3"
            android:layout_alignRight="@+id/buttonnick"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Nick Wong"
            android:id="@+id/name4"
            android:layout_gravity="right"
            android:layout_weight="0.7"
            android:layout_alignLeft="@id/image4"
            android:background="@drawable/messagebutton"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        >

        <com.parse.ParseImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/image5"
            android:src="@drawable/default_profpic"
            android:layout_weight="0.3"
            android:layout_alignRight="@+id/buttonnick"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Nick Wong"
            android:id="@+id/name5"
            android:layout_gravity="right"
            android:layout_weight="0.7"
            android:layout_alignLeft="@id/image5"
            android:background="@drawable/messagebutton"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton"
            android:layout_alignParentBottom="true"
            android:background="@drawable/backbutton"/> >

    </RelativeLayout>
</LinearLayout>


