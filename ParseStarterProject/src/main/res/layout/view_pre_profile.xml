<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:windowSoftInputMode="adjustResize"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Stinder!"
        android:id="@+id/PersonName"
        android:nestedScrollingEnabled="false"
        android:textColor="#6599FF"
        android:textSize="32sp"
        android:typeface="sans"
        android:layout_toRightOf="@+id/backButton"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textStyle="bold" />
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/PersonName"
        android:layout_above="@+id/submitbutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <com.parse.ParseImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/profileImage"
        android:baselineAlignBottom="false"
        android:contextClickable="false"
        android:background="@drawable/textborder"
        android:src="@drawable/exam"
        android:layout_alignTop="@+id/scrollView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Class"
        android:id="@+id/Class1"
        android:editable="true"
        android:elegantTextHeight="false"
        android:layout_gravity="top"
        android:background="@drawable/textborder"
        android:layout_below="@+id/profileImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Class"
        android:id="@+id/Class2"
        android:layout_below="@+id/Class1"
        android:background="@drawable/textborder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Class"
        android:inputType="text"
        android:id="@+id/Class3"
        android:layout_below="@+id/Class2"
        android:background="@drawable/textborder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Class"
        android:inputType="text"
        android:id="@+id/Class4"
        android:layout_below="@+id/Class3"
        android:background="@drawable/textborder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Class"
        android:inputType="text"
        android:id="@+id/Class5"
        android:layout_below="@+id/Class4"
        android:background="@drawable/textborder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    </RelativeLayout>
    </ScrollView>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton"
        android:background="@drawable/backbutton"
        android:layout_alignTop="@+id/PersonName"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/PersonName"/>

    <Button
        android:id="@+id/messageButton"
        android:text="Start talking!"
        android:background="@drawable/messagebutton"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
 />
</RelativeLayout>